# 环境配置示例文件
# 复制此文件为 .env 并根据实际情况修改配置值

# 环境配置
ENVIRONMENT=local  # local, development, staging, production
DOMAIN=localhost
FRONTEND_HOST=http://localhost:5173

# 安全配置
SECRET_KEY=your-secret-key-here  # 生产环境请使用强密码
BACKEND_CORS_ORIGINS=["http://localhost:5173","https://localhost:5173","http://localhost","https://localhost"]

# 数据库配置
POSTGRES_SERVER=localhost  # 数据库服务器地址
POSTGRES_PORT=5432         # 数据库端口
POSTGRES_DB=your_database_name  # 数据库名称
POSTGRES_USER=your_username     # 数据库用户名
POSTGRES_PASSWORD=your_password # 数据库密码

# 超级用户配置
FIRST_SUPERUSER=admin@example.com  # 初始管理员邮箱
FIRST_SUPERUSER_PASSWORD=changethis  # 初始管理员密码

# 项目配置
PROJECT_NAME="数据分析工具"

# 邮件配置 (可选)
SMTP_HOST=smtp.example.com
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
EMAILS_FROM_EMAIL=noreply@example.com

# 监控配置 (可选)
SENTRY_DSN=your_sentry_dsn_here

# 开发模式配置
DEBUG=false  # 生产环境设为 false
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR